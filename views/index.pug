  script.
    function calculate() {
    var package1 = document.getElementById('package1');
    var radiolabel = document.getElementById('radiolabel');
    var radioValue = $("input[name='traveler_number']:checked").val();
    var divobj1 = document.getElementById('tot_amount1');
    if (document.getElementById('vip').checked) {
    divobj1.value = package1.value * radioValue + 250;
    }
    else {
    divobj1.value = package1.value * radioValue;
    }
    }
